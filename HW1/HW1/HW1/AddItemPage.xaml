<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HW1.AddItemPage"
             Title="Add new item">
    <ContentPage.Content>
        <StackLayout>
            <Image Background="red" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"></Image>
            <Picker x:Name="drinks" Title="Choose drink"/>
            <StackLayout Orientation="Horizontal">
                <Editor x:Name="count" TextChanged="count_TextChanged" Text="1" Placeholder="Enter count" Keyboard="Numeric"/>
                <Button Text="-" Clicked="Button_Minus"/>
                <Button Text="+" Clicked="Button_Plus"/>
            </StackLayout>

            <Button Text="Order" Clicked="Button_Order"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>